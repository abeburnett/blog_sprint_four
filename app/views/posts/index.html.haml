%h1 All Posts

= link_to 'New post', new_post_path

%table
  %tr
    %th Title
    %th Text
    %th
    %th
    %th

  - @posts.each do |post|
    %tr
      %td
        = post.title
      %td
        = post.text
      %td
        = link_to 'View', post_path(post)
      %td
        = link_to 'Edit', edit_post_path(post)
      %td
        = link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }
